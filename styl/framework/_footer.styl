#footer
  background-color: $WET_ASPHALT
  line-height: 2.5em
  text-align: center
  position: relative

  .socials a
    border: 3px solid $PETER_RIVER
    color: $PETER_RIVER
    border-radius: 100%
    display: inline-block
    width: 40px
    height: 40px
    line-height: 34px
    font-size: 20px
    text-align: center
    transition all .2s

    &:hover
      background-color rgba(255,255,255,.25)
      border-color: darken($PETER_RIVER, 10%)
      color: darken($PETER_RIVER, 10%)

    + a
      margin-left: $gap-s

  p
    color: white
    margin: 1em 0 0

    a
      color: white

      &:hover
        color: darken(white, 10%)
        text-decoration: underline

  .top-button
    color: $PETER_RIVER
    position: absolute
    right: 2em
    bottom: $gap

@media (max-width: 375px)
  #footer
    .top-button
      position: static