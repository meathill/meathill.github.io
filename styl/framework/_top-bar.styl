#top-bar
  padding-top 0
  padding-bottom 0
  transition: 0.3s all
  line-height 2

  &.active
    background-color: rgba(0, 0, 0, .9)
    border-bottom: 1px solid $navbar-inverse-border
    box-shadow: 0 2px 1px rgba(0, 0, 0, .25)

    .active
      background-color: lighten($navbar-inverse-bg, 15%)

      a
        border: none

    .navbar-nav li:hover
      background-color: lighten($navbar-inverse-bg, 10%)

  .navbar-brand,
  .navbar-toggle
    color: white

  .navbar-toggle
    background-color: gray
    border: 1px solid white
    line-height: 1em

    &.collapsed
      background: none

  .nav-item
    transition: 0.3s all

    .nav-link
      padding-left .75rem
      padding-right .75rem
      color: white

    &.blog span
      background: red
      border-radius: 100%
      color: #FFF
      font-family: Arial
      font-size: 10px
      line-height: 20px
      width: 20px
      text-align: center
      position: absolute
      top: $gap-xs
      right: 0

    &.active a
      background: none
      border-bottom: 2px solid white
      font-weight: bold

  .navbar-collapse.in,
  .collapsing
    background-color: rgba(0, 0, 0, .9)

@media (max-width: 432px)
  .navbar-nav
    margin-top: 0
    margin-bottom: 0

  .navbar-collapse
    border-top: none

  #top-bar
    .active
      background-color: lighten($navbar-inverse-bg, 15%)

    .navbar-nav > .active a
      border-bottom: none
